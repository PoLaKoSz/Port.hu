{
    "name": "polakosz/porthu",
    "type": "library",
    "description": "Library to search for movies and to get informations for a specific movie from https://port.hu/",
    "keywords": [
        "PoLáKoSz",
        "Port",
        "Port.hu",
        "API",
        "wrapper"
    ],
    "homepage": "https://github.com/PoLaKoSz/Port.hu",
    "license": "MIT",
    "authors": [{
        "name": "Tom PoLáKoSz",
        "email": "polakosz@freemail.hu",
        "homepage": "https://polakosz.000webhostapp.com/",
        "role": "Developer"
    }],
    "require": {
        "php": ">=7.1",
        "squizlabs/php_codesniffer": "^3.4",
        "imangazaliev/didom": "^1.14"
    },
    "require-dev": {
        "phpunit/phpunit": "^4"
    },
    "autoload": {
        "psr-4": {
            "PoLaKoSz\\PortHu\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoLaKoSz\\PortHu\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "run-all-tests": ".\\vendor\\bin\\phpunit --bootstrap .\\vendor\\autoload.php --testdox .\\tests\\",
        "run-i-tests": ".\\vendor\\bin\\phpunit --bootstrap .\\vendor\\autoload.php --testdox .\\tests\\Integration",
        "run-r-tests": ".\\vendor\\bin\\phpunit --bootstrap .\\vendor\\autoload.php --testdox .\\tests\\Regression",
        "run-u-tests": ".\\vendor\\bin\\phpunit --bootstrap .\\vendor\\autoload.php --testdox .\\tests\\Unit",

        "run-tidy": ".\\vendor\\bin\\phpcbf --ignore=.\\tests\\Integration\\StaticResources\\*,vendor\\* --extensions=php ./ --standard=PSR2"
    }
}
